<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rowBackground">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="70"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtExpenseRowName"
            android:text="Simple budget name"
            android:layout_marginLeft="10dp"
            android:layout_weight="70"
            android:textColor="@color/rowTitle"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtExpenseRowDetails"
            android:text="Simple budget name"
            android:layout_marginLeft="10dp"
            android:layout_weight="70"
            android:textColor="@color/rowTitle"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtExpenseRowAmount"
        android:text="5000.70"
        android:gravity="right"
        android:layout_weight="30"
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


</LinearLayout>