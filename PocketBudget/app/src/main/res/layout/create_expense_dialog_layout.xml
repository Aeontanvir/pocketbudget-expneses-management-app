<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialogBg"
    android:padding="10dp">

    <TextView
        android:text="Create Expense"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="@dimen/dialogTitle"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dialogViewBg"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/txtName"
            android:textColor="@color/colorWhite"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edtExpenseName"
            android:padding="5dp"
            android:hint="@string/txtExpense"
            android:inputType="textCapWords"
            android:background="@color/colorWhite"
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/txtDetails"
            android:textColor="@color/colorWhite"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edtExpenseDetails"
            android:padding="5dp"
            android:hint="@string/txtDetails"
            android:inputType="textCapWords"
            android:background="@color/colorWhite"
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/txtAmount"
            android:textColor="@color/colorWhite"
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edtExpenseAmount"
            android:padding="5dp"
            android:gravity="right"
            android:hint="@string/txtTK"
            android:inputType="numberDecimal"
            android:background="@color/colorWhite"
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dialogViewBg"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnExpenseCreate"
            android:text="Create"
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnExpenseDialogCancel"
            android:text="@string/txtCencel"
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>